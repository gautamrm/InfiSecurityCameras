                            @{
                                foreach (var mod in Model)
                                {
                                    var idCamera3 = mod.Id;
                                    if ((idCamera3 % 3 != 0) && (idCamera3 % 5 != 0))
                                    {
                                        <tr>
                                            <th>@mod.Id</th>
                                            <th>@mod.CameraName</th>
                                            <th>@mod.Lattitude</th>
                                            <th>@mod.Longitude</th>
                                        </tr>
                                    }
                                }
                            }
