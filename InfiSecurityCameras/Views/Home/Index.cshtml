@model List<InfiSecurityCameras.Models.SecurityCameraMdl>

<h1></h1>
<div id="map" style="margin-top:20px"></div>
<br />
<main>
    <table id="cameraTableContainer" align="center">
        <tbody>
            <tr>
                <td>
                    <table id="column3">
                        <thead>
                            <tr>
                                <th colspan="4">Cameras 3</th>
